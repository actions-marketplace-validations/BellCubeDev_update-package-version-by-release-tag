{
  "name": "hello-world-javascript-action",
  "description": "GitHub Action to update an NPM package's version in the checked out version of a project using the release tag. Supports a v prefix.",
  "version": "2.0.0",
  "author": "BellCube",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/BellCubeDev/update-package-version-by-release-tag#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BellCubeDev/update-package-version-by-release-tag.git"
  },
  "bugs": {
    "url": "https://github.com/BellCubeDev/update-package-version-by-release-tag/issues"
  },
  "keywords": [
    "NPM",
    "package.json",
    "version",
    "change version",
    "update version",
    "release",
    "tag"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "package": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run package"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/eslint-parser": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.5.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.0"
  }
}
